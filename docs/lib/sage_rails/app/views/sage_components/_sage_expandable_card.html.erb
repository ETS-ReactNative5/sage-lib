<div class="sage-expandable-card">
  <%= sage_component SageButton, {
    style: "primary",
    value: component.trigger_label,
    subtle: true,
    icon: { name: "caret-right", style: "left" },
    css_classes: "sage-expandable-card__trigger",
    attributes: {
      "data-js-accordion": "header",
    }
  } %>
  <div class="<% if component.body_bordered.present? %>sage-expandable-card__body__bordered<% else %>sage-expandable-card__body<% end %>" data-js-accordion="body">
    <%= component.content %>
  </div>
</div>
