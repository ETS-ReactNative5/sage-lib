<div class="sage-input-group sage-input-group--<%= component.group_button_type -%> <% if component.disabled %>sage-input-group--disabled<% end %>" role="group" aria-labelledby="<%= component.group_id %>">
  <%= component.content %>
  <%- if component.has_hint -%>
    <%= sage_component SageInputHelper,
      helper_id: "",
      helper_target: "input-group-pw-example",
      description: "Your password must meet the following criteria:",
      hints: [
        {
          id: "pw-hint-characters",
          type_detect: "characters",
          text: "At least eight characters"
        },
        {
          id: "pw-hint-numbers",
          type_detect: "numbers",
          text: "Has one or more numbers"
        },
        {
          id: "pw-hint-symbols",
          type_detect: "symbols",
          text: "Includes at least one symbol ($@!#%)"
        }
      ]
    %>
  <%- end -%>
  <%- if component.has_button -%>
    <button class="sage-input-group__button sage-btn<% if component.group_button_toggle %> sage-input-group__toggle<% end %> <%= component.group_button_icon if component.group_button_icon.present? %>"
      <% if component.group_button_type == "password" %> data-js-mask="password"<% end %>
      <% if component.group_button_tooltip %>
       data-tooltip="<%= component.group_button_tooltip_text %>" data-position="<% component.group_button_tooltip_position %>"<% if component.group_button_tooltip_size != "" %> data-tooltip-size="<%= component.group_button_tooltip_size %>"<% end %>
      <% end %>
      <% if component.disabled %>disabled<% end %>>
      <%- if component.group_button_text_hidden -%><span class="visually-hidden"><% end %><%= component.group_button_text %><%- if component.group_button_text_hidden -%></span><% end %>
    </button>
  <%- end -%>
</div>
