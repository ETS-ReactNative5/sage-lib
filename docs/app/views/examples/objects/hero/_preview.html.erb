<%= sage_component SageCardBlock, {} do %>
  <%= sage_component SageHero, {
    description: "Get early access to new unreleased features and work along side our team by beta testing features before they go live.",
    image: asset_pack_path("media/images/docs/card/card-placeholder-sm.png"), 
    title: "Be the first to try what Kajabi is building",
  } do %>
    <% content_for :sage_hero_action do %>
      <%= sage_component SageButton, {
        subtle: true,
        style: "secondary",
        value: "Dismiss",
        icon: {
          name: "remove",
          style: "left"
        },
        attributes: {
          "data-js-hero--dismiss": ""
        }
      } %>
    <% end %>
  <% end %>
<% end %>

