<%= sage_component SageButtonGroup, { gap: :sm } do %>
  <%= sage_component SageButton, {
    value: "Toast",
    style: "primary",
    attributes: {
      "onClick": "Sage.toast.trigger({icon: 'check', message:'Toast created.', type: 'notice'})",
    },
  } %>

  <%= sage_component SageButton, {
    value: "Danger Toast",
    style: "danger",
    attributes: {
      "onClick": "Sage.toast.trigger({icon: 'danger', message:'Danger toast created.', type: 'danger'})",
    },
  } %>

  <%= sage_component SageButton, {
    value: "Custom Timer",
    style: "secondary",
    raised: true,
    attributes: {
      "onClick": "Sage.toast.trigger({icon: 'check', message:'This toast has a 10 second timer.', type: 'notice', timer: 10000})",
    },
  } %>
<% end %>
