<%= content_for :heading do %>
  <div class="docs-heading">

    <%= sage_component SageType, {
      tag: "h1",
      type_spec: "heading-1",
      content: @title.titleize
    } %>

    <%= sage_component SageType, {
      tag: "p",
      type_spec: "heading-4",
      weight: "med",
      content: info_content[:description],
      css_classes: "docs-heading__lead"
    } %>

  </div>
<% end %>
