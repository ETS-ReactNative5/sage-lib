<% if do_content.present? || dont_content.present? %>
  <%= sage_component SagePanelTiles, { tiles_in_row: 2 } do %>
    <%= sage_component SageCard, {} do %>
      <div>
        <%= sage_component SageBadge, {
          color: "published",
          value: "Do",
        } %>
      </div>
      <%= do_content %>
    <% end if do_content.present? %>
    <%= sage_component SageCard, {} do %>
      <div>
        <%= sage_component SageBadge, {
          color: "danger",
          value: "Don't",
        } %>
      </div>
      <%= dont_content %>
    <% end if dont_content.present? %>
  <% end %>
<% end %>
