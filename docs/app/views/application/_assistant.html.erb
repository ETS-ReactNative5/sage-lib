<%= sage_component SageAssistant, { logo: { path: "sage.svg" }} do %>
  <%= sage_component SageButtonGroup, { gap: :sm } do %>
    <%= sage_component SageButton, {
      value: "Foundations",
      attributes: {
        href: pages_foundation_path(:design_principles),
        title: "Foundations"
      },
      subtle: true,
      icon: {
        style: "left",
        name: "form"
      },
      style: "secondary",
    } %>
    <%= sage_component SageButton, {
      value: "Content",
      attributes: {
        href: pages_content_path(:voice_tone),
        title: "Content Guides"
      },
      subtle: true,
      icon: {
        style: "left",
        name: "pen"
      },
      style: "secondary",
    } %>
    <%= sage_component SageButton, {
      value: "Design",
      attributes: {
        href: pages_design_path(:token),
        title: "Design Tokens"
      },
      subtle: true,
      icon: {
        style: "left",
        name: "customize"
      },
      style: "secondary",
    } %>
    <%= sage_component SageButton, {
      value: "Layout",
      attributes: {
        href: pages_layout_path(:container),
        title: "Layout Patterns"
      },
      subtle: true,
      icon: {
        style: "left",
        name: "stack"
      },
      style: "secondary",
    } %>
    <%= sage_component SageButton, {
      value: "Elements",
      attributes: {
        href: pages_element_path(sorted_sage_elements.first),
        title: "Elements"
      },
      subtle: true,
      icon: {
        style: "left",
        name: "folder"
      },
      style: "secondary",
    } %>
    <%= sage_component SageButton, {
      value: "Objects",
      attributes: {
        href: pages_objects_path,
        title: "Objects"
      },
      subtle: true,
      icon: {
        style: "left",
        name: "folder-group"
      },
      style: "secondary",
    } %>
  <% end %>
  <% sage_component_section :assistant_actions do %>
    <div class="sage-btn-group sage-btn-group--gap-sm">
      <%= sage_component SageButton, {
        value: image_tag("logo-sass.svg", height: "20px"),
        attributes: {
          href: Rails.application.config.sassdocs_root_url,
          target: "_blank",
          rel: "noopener noreferrer",
          title: "Open Sassdocs site"
        },
        subtle: true,
        style: "secondary",
      } %>
      <%= sage_component SageButton, {
        value: image_tag("logo-react.svg", height: "20px"),
        attributes: {
          href: Rails.application.config.storybook_root_url,
          target: "_blank",
          rel: "noopener noreferrer",
          title: "Open Storybook React components site"
        },
        subtle: true,
        style: "secondary",
      } %>
      <%= sage_component SageButton, {
        value: $SAGE_VERSION_GEM,
        attributes: {
          href: $SAGE_VERSION_GEM_URL,
          target: "_blank",
          rel: "noopener noreferrer",
          title: "Open SageRails gem source"
        },
        subtle: true,
        style: "secondary",
      } %>
    </div>
  <% end %>
<% end %>
