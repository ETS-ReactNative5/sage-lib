        <%= sage_component SageButton, {
          style: "primary",
          value: "View details",
          attributes: { href: "#TODO-dev-kp-details-url" },
          subtle: true,
        } %>
      <% end %>

      <%= sage_component SagePanelDivider, {} %>

      <%= sage_layout SageFrame, {
        align: "center-spread",
        direction: "horizontal",
        width: "fill",
      } do %>
        <p class="<%= "#{SageClassnames::TYPE::BODY_SEMI}" %>">
          Terms and conditions
        </p>
        <%= sage_component SageButton, {
          style: "primary",
          value: "View",
          attributes: { href: "#TODO-dev-terms-url" },
          subtle: true,
        } %>
      <% end %>

      <%= sage_layout SageFrame, {
        align: "center-spread",
        direction: "horizontal",
        width: "fill",
      } do %>
        <p class="<%= "#{SageClassnames::TYPE::BODY_SEMI}" %>">
          Bank details
        </p>
        <%= sage_component SageButton, {
          style: "primary",
          value: "Edit",
          attributes: { href: "#TODO-dev-edit-modal-action" },
          subtle: true,
        } %>
      <% end %>
    <% end %>
  <% end %>
