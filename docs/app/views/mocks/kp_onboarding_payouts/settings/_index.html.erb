  title: "Payments",
  subtitle: "Your customers can pay with their preferred credit or debit card when they visit your checkout."
} do %>
  <%= sage_layout SageFrame, { direction: "horizontal" } do %>
    <%= sage_component SageIcon, {
      icon: "kajabi-filled",
      color: "white",
      card_color: "primary",
    } %>
    <%= sage_layout SageFrame, { width: "flex", gap: "sm" } do %>
      <%= sage_layout SageFrame, {
        align: "center-spread",
        direction: "horizontal",
        width: "fill",
      } do %>
        <%= sage_layout SageFrame, {
          gap: "xs",
          width: "flex",
        } do %>
          <h4 class="<%= "#{SageClassnames::TYPE::HEADING_5}" %>">
            Kajabi Payments
          </h4>
          <p class="<%= "#{SageClassnames::TYPE::BODY}" %>">
